
@model IEnumerable<Stock>

@{
    ViewData["Title"] = "Liste des stocks ";
}




<div class="row">


    <div class="col-md-8 offset-md-2">

        <div class="text-white">

            <a class="btn btn-outline-info  " asp-controller="Stock" asp-action="Create">

                <i class="bi bi-patch-plus"></i>  ajouter Stock
            </a>

        </div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Vehicule.MarqueVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.DateStock)</th>
                    <th>@Html.DisplayNameFor(model => model.QteStock)</th>


                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Vehicule.MarqueVehicule)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DateStock)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.QteStock)
                        </td>







                        <td class="align-middle">

                            <a class="btn btn-outline-primary  " asp-action="Edit" asp-route-id="@item.Id">        <i class="bi bi-pencil-square">  </i>  Modifier</a> |


                            @Html.ActionLink("Supprimer", "delete", new { id = @item.Id }, new { @class = "btn btn-danger" })



                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

