@model Statut
@using AutoBaloo.Data.Enums;
@{ ViewData["Title"] = "Supprimer staut"; }

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Supprimer la confirmation pour @Model.IdVehicule    </h1>
        </p>

        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="IdVehicule" class="control-label"></label>
                    <select asp-for="IdVehicule" class="form-control" asp-items="ViewBag.Vehicules"></select>
                    <span asp-validation-for="IdVehicule" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StatutVehicule" class="control-label"></label>
                <select asp-for="StatutVehicule" class="form-control" asp-items="Html.GetEnumSelectList<StatutVehicule>()"></select>
                <span asp-validation-for="StatutVehicule" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right" />
            </form>
            <a class="btn btn-outline-secondary" asp-action="Index">Retourner</a>
        </div>
    </div>


</div>

