
@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Liste des Réservation ";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
       
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.DateDebut)</th>
                    <th>@Html.DisplayNameFor(model => model.DateFin)</th>
                    
                    

                    <th>@Html.DisplayNameFor(model => model.Vehicule.MarqueVehicule)</th>



                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DateDebut)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DateFin)
                    </td>

                    
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicule.MarqueVehicule)
                    </td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td class="align-middle ">
                            
                            <a class="btn btn-danger text-white  " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Supprimer</a>
                        </td>
                    }
                    else
                    {
                        <td class="align-middle ">
                            <a class="btn btn-outline-primary  "
                               asp-controller="Reservation"
                               asp-action="AddReservationToShoppingCart"
                               asp-route-id="@item.Id"><i class="bi bi-cart-plus"></i> Passer l'achat </a>

                        </td>

                    }
                    </tr>
                }

            </tbody>



        </table>

    </div>
</div>
