@model NewReservationVM
@using  AutoBaloo.Data.Enums;
@{ ViewData["Title"] = "Ajouter Une Réservation";}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p style="text-align:center">
            <h1>Ajouter une nouvelle Réservation</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Reservation" asp-action="Create">

                    <div class="form-group">
                        <label asp-for="DateDebut" class="control-label"></label>
                        <input asp-for="DateDebut" type="datetime-local" Class="form-control" />
                        <span asp-validation-for="DateDebut" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DateFin" class="control-label"></label>
                        <input asp-for="DateFin" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DateFin" class="text-danger"></span>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button  type="submit" class="btn btn-primary">Ajouter une Reservation </button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>



